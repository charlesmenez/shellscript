#!/bin/sh

# A dmenu wrapper script for system functions.
set -e
dmenu="dmenu -i"
cmds="ðŸšªleave
ðŸ”ƒreboot
ðŸ–¥shutdown"

choice=$(printf "$cmds" | $dmenu -p "select a action:")
SWALLOW=
if [ -z "$choice" ]; then
  exit 0
fi
case $choice in
   ðŸ”ƒreboot) doas reboot ;;
   ðŸ–¥shutdown) doas shutdown -h now ;;
   ðŸšªleave) pkill X ;;
esac

